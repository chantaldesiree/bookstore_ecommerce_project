<div class="column pt-5">
<div class="card mb-5 px-5">
<% subtotal ||= 0 %>
    <% session[:shopping_cart].each do |id, item| %>
      <% qty = session[:shopping_cart][id] %>
      <% book = Book.find(id) %>

<div class="card-content column mb-2">
  <div class="">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="<%= book.cover_art %>" />
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">
            <%= link_to book.title, book %>
        </p>
        <p class="subtitle is-6 mb-1"><%= link_to book.author.name, book.author %></p>
        <p class="subtitle is-7">ISBN: <%= book.isbn %></p>
      </div>
      <div class="pl-3 column is-one-fifth">
        <p class="has-text-right">Quantity: <%= qty %></p>
        <p class="has-text-right">Price: <%= number_to_currency(book.price)%>
        <p class="has-text-right"> Subtotal: <%= number_to_currency(book.price * qty) %></p>
      <div><% subtotal += book.price * qty %>
      <div class="columns level-right mt-2 mr-1">
      <% if session[:shopping_cart][book.id.to_s] %>
        <%= form_with url: cart_path(book), method: :delete do %>
          <%= button_tag '-', {class: "card-footer-item is-size-6 add-to-cart pl-3 pr-3"} %>
        <% end %>

        <%= form_with url: cart_index_path do %>
          <%= hidden_field_tag(:id, book.id) %>
          <%= button_tag '+', {class: "card-footer-item is-size-6 add-to-cart"} %>
        <% end %>
      <% end %>
      </div>
      </div>
    </div>

      </div>
      </div>
      </div>
      <% end %>

    <div class="mt-5 title is-5 red-text has-text-right mb-0 pr-5">Subtotal: <%= number_to_currency(subtotal) %></div>
    <div class="mt-2 has-text-right mb-0 pr-5">PST: <%= number_to_currency(subtotal * 0.07) %></div>
    <div class="mt-2 has-text-right mb-0 pr-5">GST: <%= number_to_currency(subtotal * 0.05) %></div>
    <div class="mt-2 title is-2 red-text has-text-right mb-5 pr-5">Total: <%= number_to_currency(subtotal * 1.12) %></div>
    </div>